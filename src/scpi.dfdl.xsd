<xs:group name="Cmd_INIT" >
	<xs:sequence>
								<xs:element name="INIT"    type="xs:string" dfdl:lengthKind="pattern" dfdl:lengthPattern="^INIT" dfdl:encoding="ISO-8859-1" >
									<xs:annotation>
										<xs:appinfo source="http://www.ogf.org/dfdl/" >
											<dfdl:discriminator test="{ (dfdl:valueLength(., 'bytes') gt 0) }" />
										</xs:appinfo>
									</xs:annotation>
								</xs:element>
	</xs:sequence>
</xs:group>


<xs:group name="Cmd_OUTP" >
	<xs:sequence>
		<xs:element name="OUTP"    type="xs:string" dfdl:lengthKind="pattern" dfdl:lengthPattern="OUTP " dfdl:encoding="ISO-8859-1" >
			<xs:annotation>
				<xs:appinfo source="http://www.ogf.org/dfdl/" >
					<dfdl:discriminator test="{ (dfdl:valueLength(., 'bytes') gt 0) }" />
				</xs:appinfo>
			</xs:annotation>
		</xs:element>
		<xs:element name="STATE"   type="xs:string" dfdl:lengthKind="pattern" dfdl:lengthPattern="O(N|FF)" dfdl:encoding="ISO-8859-1" >
			<xs:annotation>
				<xs:appinfo source="http://www.ogf.org/dfdl/" >
					<dfdl:discriminator test="{ (dfdl:valueLength(., 'bytes') gt 0) }" />
				</xs:appinfo>
			</xs:annotation>
		</xs:element>
	</xs:sequence>
</xs:group>

<xs:group name="Cmd_FREQ" >
	<xs:sequence>
		<xs:element name="FREQ"    type="xs:string" dfdl:lengthKind="pattern" dfdl:lengthPattern=":FREQ " dfdl:encoding="ISO-8859-1" >
			<xs:annotation>
				<xs:appinfo source="http://www.ogf.org/dfdl/" >
					<dfdl:discriminator test="{ (dfdl:valueLength(., 'bytes') gt 0) }" />
				</xs:appinfo>
			</xs:annotation>
		</xs:element>
		<xs:element name="MHz"     type="xs:string" dfdl:lengthKind="pattern" dfdl:lengthPattern="^[+\-]?(?=.)(?:0|[1-9]\d*)?(?:\.\d*)?(?:\d[eE][+\-]?\d+)?MHz" dfdl:encoding="ISO-8859-1" >
			<xs:annotation>
				<xs:appinfo source="http://www.ogf.org/dfdl/" >
					<dfdl:discriminator test="{ (dfdl:valueLength(., 'bytes') gt 0) }" />
				</xs:appinfo>
			</xs:annotation>
		</xs:element>
	</xs:sequence>
</xs:group>

<xs:group name="Cmd_SOUR" >
	<xs:sequence>
		<xs:element name="SOUR"    type="xs:string" dfdl:lengthKind="pattern" dfdl:lengthPattern="SOUR:" dfdl:encoding="ISO-8859-1" >
			<xs:annotation>
				<xs:appinfo source="http://www.ogf.org/dfdl/" >
					<dfdl:discriminator test="{ (dfdl:valueLength(., 'bytes') gt 0) }" />
				</xs:appinfo>
			</xs:annotation>
		</xs:element>
		<xs:element name="VOLT"    type="xs:string" dfdl:lengthKind="pattern" dfdl:lengthPattern="VOLT " dfdl:encoding="ISO-8859-1" >
			<xs:annotation>
				<xs:appinfo source="http://www.ogf.org/dfdl/" >
					<dfdl:discriminator test="{ (dfdl:valueLength(., 'bytes') gt 0) }" />
				</xs:appinfo>
			</xs:annotation>
		</xs:element>
		<xs:element name="Voltage" type="xs:string" dfdl:lengthKind="pattern" dfdl:lengthPattern="^[+\-]?(?=.)(?:0|[1-9]\d*)?(?:\.\d*)?(?:\d[eE][+\-]?\d+)?" dfdl:encoding="ISO-8859-1" >
			<xs:annotation>
				<xs:appinfo source="http://www.ogf.org/dfdl/" >
					<dfdl:discriminator test="{ (dfdl:valueLength(., 'bytes') gt 0) }" />
				</xs:appinfo>
			</xs:annotation>
		</xs:element>
	</xs:sequence>
</xs:group>
</xs:schema>
