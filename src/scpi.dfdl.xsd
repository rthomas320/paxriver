<!-- WORKING CODE PARSES OUT EACH COMMAND - EVEN MULTIPLE ON SINGLE LINES
	<xs:group name="Commands">
			<xs:sequence>
				<xs:element name="CmdLineCR" minOccurs="0" maxOccurs="unbounded" dfdl:terminator="%CR;%NL;">
					<xs:complexType>
						<xs:sequence dfdl:separator=";" dfdl:separatorPosition="infix" >
							<xs:element name="Cmd" type="xs:string" maxOccurs="unbounded" dfdl:lengthKind="delimited" />
						</xs:sequence>
					</xs:complexType>
				</xs:element>
				<xs:element name="CmdLine" maxOccurs="unbounded" dfdl:terminator="%NL;">
					<xs:complexType>
						<xs:sequence dfdl:separator=";" dfdl:separatorPosition="infix" >
							<xs:element name="Cmd" type="xs:string" maxOccurs="unbounded" dfdl:lengthKind="delimited" />
						</xs:sequence>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
	</xs:group>
-->

	<xs:element name="SCPI">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="Commands" minOccurs="0" maxOccurs="unbounded" dfdl:occursCountKind="implicit" >
					<xs:complexType>
                        <xs:sequence>
							<xs:choice>
								<xs:group ref="Cmd_INIT" />
								<xs:group ref="Cmd_OUTP" />
								<xs:group ref="Cmd_FREQ" />
								<xs:group ref="Cmd_SOUR" />
<!--							<xs:element name="POW"    type="xs:string" dfdl:lengthKind="pattern" dfdl:lengthPattern=":POW " dfdl:encoding="ISO-8859-1" />
							<xs:element name="DBM"    type="xs:string" dfdl:lengthKind="pattern" dfdl:lengthPattern="^[+\-]?(?=.)(?:0|[1-9]\d*)?(?:\.\d*)?(?:\d[eE][+\-]?\d+)?DBM" dfdl:encoding="ISO-8859-1" />
-->
							</xs:choice>

							<xs:choice>
								<xs:element name="CRLF"    type="xs:string" dfdl:lengthKind="pattern" dfdl:lengthPattern="\x0D\x0A" dfdl:encoding="ISO-8859-1" >
									<xs:annotation>
										<xs:appinfo source="http://www.ogf.org/dfdl/" >
											<dfdl:discriminator test="{ (dfdl:valueLength(., 'bytes') gt 0) }" />
										</xs:appinfo>
									</xs:annotation>
								</xs:element>
								<xs:element name="LF"      type="xs:string" dfdl:lengthKind="pattern" dfdl:lengthPattern="\x0A" dfdl:encoding="ISO-8859-1" >
									<xs:annotation>
										<xs:appinfo source="http://www.ogf.org/dfdl/" >
											<dfdl:discriminator test="{ (dfdl:valueLength(., 'bytes') gt 0) }" />
										</xs:appinfo>
									</xs:annotation>
								</xs:element>
								<xs:element name="SEMICOLON"  type="xs:string" dfdl:lengthKind="pattern" dfdl:lengthPattern=";" dfdl:encoding="ISO-8859-1" >
									<xs:annotation>
										<xs:appinfo source="http://www.ogf.org/dfdl/" >
											<dfdl:discriminator test="{ (dfdl:valueLength(., 'bytes') gt 0) }" />
										</xs:appinfo>
									</xs:annotation>
								</xs:element>
							</xs:choice>
						</xs:sequence>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>



